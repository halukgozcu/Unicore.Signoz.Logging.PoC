{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "Unicore.Finance.Service"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:5417",
          "resourceAttributes": {
            "service.name": "Unicore.Finance.Service"
          }
        }
      }
    ]
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:5417",
    "ServiceName": "Unicore.Finance.Service",
    "ServiceDisplayName": "Unicore Finance Service",
    "ExportConsole": true,
    "ExportMetrics": true,
    "ExportLogs": true,
    "ExportTraces": true
  },
  "AllowedHosts": "*"
}
